{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "target": "ES2016",
        "module": "ESNext",  // 模块格式
        "moduleResolution": "node",  // 解析模块
        "strict": false,
        "resolveJsonModule": true,
        "esModuleInterop": true, // 通过es6的模块引入方式引入commonjs模块
        "jsx": "preserve", // jsx语法不转义
        "lib": ["ESNext", "dom"],
        "baseUrl": ".",
        "paths": {
            "@vue/*": ["packages/*/src"]
        }
    }
}